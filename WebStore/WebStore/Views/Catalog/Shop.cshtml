@model CatalogViewModel
@{ 
    Layout = "_LayoutSideBar";
    ViewData["Title"] = "Shop";
}

@section top{ 
    @await Html.PartialAsync("Partial/_Advertisement")
}

<section>
        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync("Partial/_ProductItems", Model.Products)
            <paging page-model="@Model.PageViewModel" page-action="Shop"
                    page-url-sectionId="@Model.SectionId" 
                    page-url-brandId="@Model.BrandId"></paging>
        </div>
</section>